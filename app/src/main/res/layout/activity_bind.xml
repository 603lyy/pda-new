<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.BindActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bind_activity_short_link"
        android:layout_marginTop="30dp"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_scan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:background="@drawable/edittext_border_black"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/tv_scan"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_red_round"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/bind_activity_scan"
            android:layout_marginLeft="10dp"
            android:padding="3dp"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bind_activity_chip"
        android:layout_marginTop="50dp"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_fetch"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:background="@drawable/edittext_border_black"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/tv_fetch"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_red_round"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/bind_activity_fetch"
            android:layout_marginLeft="10dp"
            android:padding="3dp"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_bind"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_red_round"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/bind_activity_commit"
        android:layout_margin="30dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="@color/white"
        android:textSize="18dp" />

</LinearLayout>